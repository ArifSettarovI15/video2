{% extends "manager/global.html.twig" %}
{% block content %}
    <div class="actions">
        <a class="btn btn-primary" href="{{ global.base_url }}/manager/settings/add/">Добавить</a>
    </div>
    <div class="table_data">
        <div class="table_data_navigation">
            {% include 'parts/paging.html.twig' %}
        </div>
        <table class="table_bordered table_striped">
            <thead>
            <tr>
                <th style="width: 100px">ID</th>
                <th style="width: 100px">Акт</th>
                <th>Название</th>
                <th class="action_button_3"></th>
            </tr>
            <tr>
                <th><input data-name="id" data-type="filter_value" min="0" type="text"></th>
                <th>
                    <select data-name="status" data-type="filter_value">
                        <option value="-1">Все</option>
                        <option value="0">Выкл</option>
                        <option value="1">Вкл</option>
                    </select>
                </th>
                <th><input data-name="title" data-type="filter_value" type="text"></th>
                <th class="action_button"></th>
            </tr>
            </thead>
            <tbody class="table_content">
            {% include 'settings/manager/settings_table.html.twig' %}
            </tbody>
        </table>
    </div>
{% endblock %}