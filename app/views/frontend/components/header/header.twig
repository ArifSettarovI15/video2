{% import 'frontend/elements/svg/svg_macros.twig' as Svg %}
{% if not global.page.background %}
    {% set background_error = '/assets/images/static/mainpage_bg.jpg' %}
{% endif %}
{% if background_error %}
    <div class="header_background" style="background-image: url('{{ background_error }}');"></div>
{% else %}
    {% if is_home %}
        <div class="header_background" style="background-image: url('{{ global.page.background }}');
                background-attachment: fixed;"></div>
    {% else %}
        <div class="header_background" style="background-image: url('{{ global.page.background }}');"></div>
    {% endif %}

{% endif %}

<div class="header">
    <div class="header_links">
        <div class="container">
            <div class="header_links_wrapper">
                <div class="header_links__socials">
                    {% for social in global.socials %}
                        <a href="{{ social.social_url }}" class="header_links__item" title="{{ social.social_title }}">
                            {{ Svg.icon(social.social_icon,1) }}
                        </a>
                    {% endfor %}
                </div>

                <div class="header_links__phone">
                    <a href="tel:{{ global.fields.about.about_phone|replace({'(':'',')':'',' ':'','-':''}) }}"
                       class="header_links__item">
                        {{ Svg.icon('header_phone',1) }}
                    </a>
                    <a href="tel:{{ global.fields.about.about_phone|replace({'(':'',')':'',' ':'','-':''}) }}"
                       class="header_links__item_phone ">
                        {{ global.fields.about.about_phone }}
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="main_menu">
            <div class="main_menu_links">
                <a href="/">
                    {{ Svg.icon('logo',1, 105,60) }}
                </a>

                <a href="/about.html" class="main_menu_link">
                    Кто мы
                </a>
                <a href="{{ global.base_url }}/videocatalog/" class="main_menu_link">
                    Видеокаталог
                </a>
                <a href="/blog" class="main_menu_link">
                    Блог
                </a>
                <a href="/contacts.html" class="main_menu_link">
                    Контакты
                </a>
                {% if global.user_info.user_id %}
                    <a href="/cabinet" class="main_menu_link_cabinet">
                        {{ Svg.icon('user',1, 15, 18) }}
                        <span>
                        Личный кабинет
                    </span>
                    </a>
                {% else %}
                    <div class="main_menu_link_cabinet login_modal_open">
                        {{ Svg.icon('user',1, 15, 18) }}
                        <span>
                        Личный кабинет
                    </span>
                    </div>

                {% endif %}
            </div>
            <div class="main_menu_mobile">
                <a href="/">
                    {{ Svg.icon('logo',0, 105,60) }}
                </a>
                <a href="#" class="burger_menu_button burger_menu_button_show">
                    {{ Svg.icon('burger1',1, 60,60) }}
                </a>

            </div>
        </div>
    </div>
</div>
<div class="burger_menu">
    <div class="container">
    <div class="header_links_wrapper">
        <div class="header_links__socials">
            {% for social in global.socials %}
                <a href="{{ social.social_url }}" class="header_links__item" title="{{ social.social_title }}">
                    {{ Svg.icon(social.social_icon,1) }}
                </a>
            {% endfor %}
        </div>

        <div class="header_links__phone">
            <a href="tel:{{ global.fields.about.about_phone|replace({'(':'',')':'',' ':'','-':''}) }}"
               class="header_links__item">
                {{ Svg.icon('header_phone',1) }}
            </a>
            <a href="tel:{{ global.fields.about.about_phone|replace({'(':'',')':'',' ':'','-':''}) }}"
               class="header_links__item_phone ">
                {{ global.fields.about.about_phone }}
            </a>
        </div>
    </div>
    <div class="burger_menu_top">
    <div class="main_menu_mobile">
        <a href="/">
            {{ Svg.icon('logo',0, 105,60) }}
        </a>
        <a href="#" class="burger_menu_button burger_menu_button_hide">
            {{ Svg.icon('close',1, 60,60) }}
        </a>
    </div>
    </div>
    <div class="burger_menu_links">
    <a href="/about.html" class="main_menu_link">
        Кто мы
    </a>
    <a href="{{ global.base_url }}/videocatalog/" class="main_menu_link">
        Видеокаталог
    </a>
    <a href="/blog" class="main_menu_link">
        Блог
    </a>
    <a href="/contacts.html" class="main_menu_link">
        Контакты
    </a>
    {% if global.user_info.user_id %}
        <a href="/cabinet" class="main_menu_link_cabinet">
            {{ Svg.icon('user',1, 30, 30) }}
            <span>Личный кабинет</span>
        </a>
    {% else %}
        <div class="main_menu_link_cabinet login_modal_open">
            {{ Svg.icon('user',1, 30, 30) }}
            <span>Личный кабинет</span>
        </div>

    {% endif %}
    </div>
    </div>
</div>
{% if is_home %}
    {% include 'frontend/components/hero/hero.twig' %}
{% endif %}

{% include 'frontend/components/login_modal/login_modal.twig' %}
{% include 'frontend/components/register_modal/register_modal.twig' %}