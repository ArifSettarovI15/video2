<ul class="popular-categories__list">
    {% for cat in pop_cats %}
        <!--item {{ loop.index }}-->
        <li class="popular-category__item{{ loop.index }}">
            <a href="{{ cat.full_cat_url }}" class="popular-category__container">
                <div class="item-title">
                    <h3 class="item-title__text">
                        {{ cat.cat_short_title }}
                    </h3>
                </div>
                <div class="item-img">
                    {% if cat.cat_icon!=0 or cat.service_cat_icon!=0 %}
                        <img class="img" src="{{ cat.cat_icon_url }}" alt="{{ cat.cat_short_title }}">
                    {% endif %}
                </div>
            </a>
        </li>
    {% endfor %}
</ul>